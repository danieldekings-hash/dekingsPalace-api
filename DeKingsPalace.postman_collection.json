		{
			"name": "Investments",
			"item": [
				{
					"name": "Create Investment - BTC",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('investment_id', response.investmentId);",
									"    pm.environment.set('payment_reference', response.reference);",
									"    pm.environment.set('deposit_address', response.depositAddress);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"plan\": \"Gold Plan\",\n  \"amount\": 1000,\n  \"currency\": \"BTC\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/investments",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"investments"
							]
						},
						"description": "Create a new investment with Bitcoin. Requires authentication."
					},
					"response": []
				},
